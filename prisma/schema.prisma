generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TABLES
model Colosseum {
  colosseumId   Int         @id @default(autoincrement())
  name          String      @unique
  country       String
  city          String
  terrainType   String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now())
  events        Event[]
}

model Event {
  eventId         Int         @id @default(autoincrement())
  eventTitle      String  	  @unique
  venue           String
  date            DateTime
  awards          Award[]
  teams           Team[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @default(now())
  colosseum       Colosseum   @relation(fields: [venue], references: [name], onDelete: Cascade)
}

model Award {
  awardId     Int     @id @default(autoincrement())
  awardTitle  String
  type        String   //i.e. cash, trophy, etc
  quantity    Int  //num times this can be given in an event i.e. honorary 3 times, gold twice, silver twice, etc...
  eventTitle  String
  event       Event   @relation(fields: [eventTitle], references: [eventTitle], onDelete: Cascade)
}

model Team {
  teamId        Int             @id @default(autoincrement())
  teamName      String          @unique
  members       Participant[]
  eventTitle    String?
  country       String
  city          String          @unique
  numMembers    Int
  events        Event?          @relation(fields: [eventTitle], references: [eventTitle], onDelete: Cascade)
}

model Participant {
  participantId   Int       @id @default(autoincrement())
  alias           String    @unique
  age             Int
  memberOf        String? 
  animals         Animal[]
  team            Team?     @relation(fields: [memberOf], references: [teamName])
}

model Animal {
  animalId  Int             @id @default(autoincrement())
  name      String          @unique
  taxonomy  Taxonomy
  species   String
  rank      Rank
  ownerName String
  owner     Participant     @relation(fields: [ownerName], references: [alias], onDelete: Cascade) //cascade?
}

enum Rank {
  OLYMPUS
  ELYSIUM
  VALHALLA
  IMMORTAL
  EMPIRE
  UNDYING
  TARTAROS
}

enum Taxonomy {
  MAMMAL
  FISH
  AMPHIBIAN
  REPTILE
  BIRD
  INSECT
  MUTANT
  DINOSAUR
  ROBOT
}