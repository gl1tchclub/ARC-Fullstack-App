generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TABLES
model Colosseum {
  colosseumId   Int         @id @default(autoincrement())
  name          String      @unique
  country       String
  city          String
  terrainType   String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now())
  events        Event[]
}

model Event {
  eventId         Int         @id @default(autoincrement())
  name            String  	  @unique
  location        String
  date            DateTime
  awards          Award[]
  teams           Team[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @default(now())
  colosseum       Colosseum   @relation(fields: [location], references: [name], onDelete: Cascade)
}

model Award {
  awardId     Int     @id @default(autoincrement())
  awardName   String
  type        String   //i.e. cash, trophy, etc
  quantity    Int  //num times this can be given in an event i.e. honorary 3 times, gold twice, silver twice, etc...
  eventId     Int
  event       Event   @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
}

model Team {
  teamId        Int             @id @default(autoincrement())
  name          String          @unique
  members       Participant[]
  eventName     String?
  continent     String
  country       String
  city          String          @unique
  numMembers    Int
  events        Event?          @relation(fields: [eventName], references: [name], onDelete: Cascade)
}

model Participant {
  participantId   Int       @id @default(autoincrement())
  name            String    @unique
  memberOf        String? 
  animals         Animal[]
  numberOfAwards  Int
  team            Team?     @relation(fields: [memberOf], references: [name])
}

model Animal {
  animalId  Int             @id @default(autoincrement())
  name      String          @unique
  taxonomy  Taxonomy
  species   String
  rank      Rank
  ownerId   Int
  owner     Participant     @relation(fields: [ownerId], references: [participantId], onDelete: Cascade) //cascade?
}

enum Rank {
  OLYMPUS
  ELYSIUM
  VALHALLA
  IMMORTAL
  EMPIRE
  UNDYING
  TARTAROS
}

enum Taxonomy {
  MAMMAL
  FISH
  AMPHIBIAN
  REPTILE
  BIRD
  INSECT
  MUTANT
  DINOSAUR
  ROBOT
}