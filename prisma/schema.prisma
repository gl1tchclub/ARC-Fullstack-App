// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Institution {
  id        Int      @id @default(autoincrement()) //@id = specify the primary key
  name      String
  region    String
  country   String
  departments Department[]
  createdAt DateTime @default(now()) //these last two do not include in total variables/attributes
  updatedAt DateTime @updatedAt
}

model Department {
  id            Int         @id @default(autoincrement())
  name          String
  institutionId Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  institution   Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)
}

model Animal {
  animalId  Int   @id @default(autoincrement())
}

model Enclosure {
  enclosureId   Int   @id @default(autoincrement())
}

model Staff {
  staffId   Int   @id @default(autoincrement())
}
